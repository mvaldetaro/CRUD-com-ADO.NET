@model IEnumerable<Gerenciador_Aniversario.Models.Pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Listar Todos", "Index", "Pessoa")
</p>

<h3>Anivesariantes do Dia</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DtAniversario)
        </th>
    </tr>

    @foreach (var item in ViewBag.PessoasToday)
    {
        <tr>
            <td>
                @item.Nome
            </td>
            <td>
                @item.Sobrenome
            </td>
            <td>
                @item.DtAniversario
            </td>
        </tr>
    }

</table>

<h3>Próximos Aniversariantes</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sobrenome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DtAniversario)
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.PessoasByDate)
    {
        <tr>
            <td>
                @item.Nome
            </td>
            <td>
                @item.Sobrenome
            </td>
            <td>
                @item.DtAniversario
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", "Pessoa", new { id = item.PessoaID }, null)
            </td>
        </tr>
    }

</table>



